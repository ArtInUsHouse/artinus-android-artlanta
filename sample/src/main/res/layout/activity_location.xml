            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gallery_hours_time" />

        <ImageView
            android:id="@+id/imageViewMap"
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/textViewGalleryLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/gallery_location"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textViewGalleryAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gallery_address" />

        <TextView
            android:id="@+id/textViewGalleryZip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gallery_zip_code" />

